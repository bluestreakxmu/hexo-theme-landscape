.bottom-btn
  z-index 2
  position fixed
  _position absolute
  bottom 18%
  right 2%
  width 36px;

if gotop
  .icon-gotop
    width 36px
    height 50px
    cursor pointer
    border-radius 5px
    margin-bottom 10px
    text-decoration none
    color #666
    line-height 36px
    font-size 30px
    text-align center
    display inline-block
    font-family FontAwesome
    font-style normal
    font-weight normal
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
  .icon-gotop
    &:before
      content "\f062"
  .icon-gotop
    &:active
      color: black;
  .icon-gotop
    &:hover
      color: black;
