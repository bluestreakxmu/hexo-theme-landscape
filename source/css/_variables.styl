// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official

// Colors
color-default = #555
color-grey = #999
color-border = #eee
color-link = #258fb8
color-background = #fff
color-sidebar-text = #777
color-widget-background = #eee
color-widget-border = #ccc
color-footer-background = #24292e
color-mobile-nav-background = #191919
color-twitter = #00aced
color-facebook = #3b5998
color-pinterest = #cb2027
color-google = #dd4b39

// Fonts
font-sans = -apple-system, BlinkMacSystemFont,
    "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell",
    "Fira Sans", "Droid Sans", "Helvetica Neue",
    sans-serif
font-serif = Georgia, "Times New Roman", serif
font-mono = Menlo, "Source Code Pro", Consolas, Monaco, Consolas, monospace
font-icon = FontAwesome
font-icon-path = "fonts/fontawesome-webfont"
font-icon-version = "4.7.0"
font-size = 15px
line-height = 1.6em
line-height-title = 1.3em

// Header
logo-size = 40px
subtitle-size = 16px
banner-height = 70px
//banner-url = "images/banner.jpg"
banner-url = "http://owucj827k.bkt.clouddn.com/banner.jpg"

sidebar = hexo-config("sidebar")
gotop = hexo-config("go_top")

// Layout
block-margin = 20px // 离顶部title的距离
article-padding = 20px
mobile-nav-width = 280px
main-column = 12  // 主文章区域的宽度
sidebar-column = 3 // 侧边栏区域的宽度

if sidebar and sidebar isnt bottom
  _sidebar-column = sidebar-column
else
  _sidebar-column = 0

// Grids
column-width = 80px
gutter-width = 20px
columns = main-column + _sidebar-column

// Media queries
mq-mobile = "screen and (max-width: 479px)"
mq-tablet = "screen and (min-width: 480px) and (max-width: 767px)"
mq-normal = "screen and (min-width: 768px)"

color-sina = #ea0020
color-qq = #518adb
color-renren = #406ccb
color-tencent = #33b5eb